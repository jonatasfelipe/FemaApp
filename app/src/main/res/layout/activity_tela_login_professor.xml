<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundloginprofessor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLoginProfessor">


    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Logo da Instiruição"
        android:src="@drawable/logo"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="29dp" />

    <EditText
        android:id="@+id/editTextraprofessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textViewbvprofessor"
        android:layout_marginTop="40dp"
        android:background="#eeeeee"
        android:gravity="center_horizontal"
        android:hint="RA :"
        android:inputType="number"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewbvprofessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        android:text="Bem Vindo Professor!"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextsenhaprofessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextraprofessor"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="SENHA :"
        android:inputType="numberPassword"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonloginprofessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextsenhaprofessor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Login"
        tools:ignore="HardcodedText" />

    </RelativeLayout>