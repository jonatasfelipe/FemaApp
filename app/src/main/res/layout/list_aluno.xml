<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textViewHead"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="148dp"
                android:layout_marginStart="148dp"
                android:text="Nome"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewHead"
                android:layout_alignStart="@+id/textViewHead"
                android:layout_below="@+id/textViewHead"
                android:layout_marginLeft="-21dp"
                android:layout_marginStart="-21dp"
                android:text="RA"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="106dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewRg"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewHead"
                android:layout_alignStart="@+id/textViewHead"
                android:layout_below="@+id/textViewDesc"
                android:layout_marginLeft="-18dp"
                android:layout_marginStart="-18dp"
                android:text="RG"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCpf"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtra"
                android:layout_below="@+id/textViewRg"
                android:layout_marginStart="34dp"
                android:text="CPF"
                tools:ignore="HardcodedText"
                android:layout_alignLeft="@+id/txtra"
                android:layout_marginLeft="34dp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCpf"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/txtemail"
                android:text="E-MAIL"
                tools:ignore="HardcodedText"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/txtemail" />

            <TextView
                android:id="@+id/txtnome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewHead"
                android:layout_toEndOf="@+id/imageView"
                android:text="Nome :"
                tools:ignore="HardcodedText"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHead"
                android:layout_toEndOf="@+id/imageView"
                android:text="RA :"
                tools:ignore="HardcodedText"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewDesc"
                android:layout_toEndOf="@+id/imageView"
                android:text="RG :"
                tools:ignore="HardcodedText"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtcpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewRg"
                android:layout_toEndOf="@+id/imageView"
                android:text="CPF :"
                tools:ignore="HardcodedText"
                android:layout_toRightOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCpf"
                android:layout_toEndOf="@+id/imageView"
                android:text="Email :"
                tools:ignore="HardcodedText"
                android:layout_toRightOf="@+id/imageView" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>